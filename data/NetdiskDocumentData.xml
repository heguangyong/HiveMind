<entity-facade-xml type="seed-initial">
    <!-- Netdisk DataDocument Links -->
    <moqui.entity.document.DataDocumentLink dataDocumentId="MantleWikiPage" linkSeqId="21" linkSet="netdisk" label="Wiki Page" urlType="screen"
                                            linkUrl="/apps/netdisk/wiki/${wikiSpaceId}/${pagePath?:''}"/>
    <moqui.entity.document.DataDocumentLink dataDocumentId="MantleProject" linkSeqId="21" linkSet="netdisk" label="Project Summary" urlType="screen"
                                            linkUrl="/apps/netdisk/Project/ProjectSummary?workEffortId=${workEffortId}"/>
    <moqui.entity.document.DataDocumentLink dataDocumentId="MantleTask" linkSeqId="21" linkSet="netdisk" label="Task Summary" urlType="screen"
                                            linkUrl="/apps/netdisk/Task/TaskSummary?workEffortId=${workEffortId}"/>
    <moqui.entity.document.DataDocumentLink dataDocumentId="MantleRequest" linkSeqId="21" linkSet="netdisk" label="Edit Request" urlType="screen"
                                            linkUrl="/apps/netdisk/Request/EditRequest?requestId=${requestId}"/>

    <!-- Netdisk Admin DataDocument Links -->
    <moqui.entity.document.DataDocumentLink dataDocumentId="MantleWikiPage" linkSeqId="25" linkSet="netdiskadmin" label="Wiki Page" urlType="screen"
                                            linkUrl="/apps/netdiskadmin/Wiki/wiki/${wikiSpaceId}/${pagePath?:''}"/>
    <moqui.entity.document.DataDocumentLink dataDocumentId="MantleProject" linkSeqId="25" linkSet="netdiskadmin" label="Edit Project" urlType="screen"
                                            linkUrl="/apps/netdiskadmin/Project/EditProject?rootWorkEffortId=${workEffortId}"/>
    <moqui.entity.document.DataDocumentLink dataDocumentId="MantleParty" linkSeqId="25" linkSet="netdiskadmin" label="Edit Party" urlType="screen"
                                            linkUrl="/apps/netdiskadmin/Party/EditParty?partyId=${partyId}"/>

    <!-- EmailTemplates for Netdisk Update Notifications -->
    <moqui.basic.email.EmailTemplate emailTemplateId="NETDISK_WIKI_PAGE_UPDATE" description="Netdisk 维基页面更新通知"
                                     emailServerId="SYSTEM" bodyScreenLocation="component://netdisk/screen/WikiPageUpdateNotification.xml"
                                     webappName="webroot" fromAddress="" ccAddresses="" bccAddresses=""
                                     subject="Wiki Page Updated: ${document.wikiSpaceId}/${document.pagePath}" sendPartial="Y"/>
    <moqui.basic.email.EmailTemplate emailTemplateId="NETDISK_TASK_UPDATE" description="Netdisk 任务更新通知"
                                     emailServerId="SYSTEM" bodyScreenLocation="component://netdisk/screen/TaskUpdateNotification.xml"
                                     webappName="webroot" fromAddress="" ccAddresses="" bccAddresses=""
                                     subject="Task Updated: ${document._id} - ${document.name}" sendPartial="Y"/>

    <!-- NotificationTopic linkTemplate overrides -->
    <moqui.security.user.NotificationTopic topic="MantleWikiPage"
                                           linkTemplate="/vapps/netdisk/wiki/${wikiSpaceId}/${pagePath?:''}"/>
    <moqui.security.user.NotificationTopic topic="MantleTask"
                                           linkTemplate="/vapps/netdisk/Task/TaskSummary?workEffortId=${workEffortId}"/>
    <moqui.security.user.NotificationTopic topic="MantleRequest"
                                           linkTemplate="/vapps/netdisk/Request/EditRequest?requestId=${requestId}"/>
</entity-facade-xml>