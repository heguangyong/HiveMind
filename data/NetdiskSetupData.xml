<entity-facade-xml type="seed-initial">
    <!-- Netdisk Project Management App -->
    <moqui.security.ArtifactGroup artifactGroupId="NETDISK" description="Netdisk Project Management App"/>
    <moqui.security.ArtifactGroupMember artifactGroupId="NETDISK" artifactName="component://netdisk/screen/NetdiskProjectManagement.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
    <moqui.security.ArtifactGroupMember artifactGroupId="NETDISK" artifactName="component://netdisk/screen/NetdiskApp.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>

    <!-- Permissions for ADMIN users -->
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_ADMIN_ALL" userGroupId="ADMIN" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>

    <!-- User Groups for Netdisk -->
    <moqui.security.UserGroup userGroupId="NETDISK_ADMIN" description="Netdisk 项目管理员权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_ADMIN_AUTHZ" userGroupId="NETDISK_ADMIN" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>

    <moqui.security.UserGroup userGroupId="NETDISK_DEVELOPER" description="Netdisk 开发者权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_DEVELOPER_AUTHZ" userGroupId="NETDISK_DEVELOPER" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_CREATE"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_DEVELOPER_AUTHZ_UPDATE" userGroupId="NETDISK_DEVELOPER" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_UPDATE"/>

    <moqui.security.UserGroup userGroupId="NETDISK_TESTER" description="Netdisk 测试者权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_TESTER_AUTHZ" userGroupId="NETDISK_TESTER" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_VIEW"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_TESTER_AUTHZ_ALL" userGroupId="NETDISK_TESTER" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>

    <moqui.security.UserGroup userGroupId="NETDISK_VIEW" description="Netdisk 项目查看权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_VIEW_AUTHZ" userGroupId="NETDISK_VIEW" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_VIEW"/>

    <moqui.security.UserGroup userGroupId="NETDISK_ANALYST" description="Netdisk 业务分析师权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_ANALYST_AUTHZ" userGroupId="NETDISK_ANALYST" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_CREATE"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="NETDISK_ANALYST_AUTHZ_UPDATE" userGroupId="NETDISK_ANALYST" artifactGroupId="NETDISK" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_UPDATE"/>

    <!-- Access to My Account App for all Netdisk Groups -->
    <artifactGroups artifactGroupId="MY_ACCOUNT">
        <authz artifactAuthzId="MY_ACCOUNT_NDADMIN" userGroupId="NETDISK_ADMIN" authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDDEVELOPER" userGroupId="NETDISK_DEVELOPER" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDTESTER" userGroupId="NETDISK_TESTER" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDVIEW" userGroupId="NETDISK_VIEW" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDANALST" userGroupId="NETDISK_ANALYST" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
    </artifactGroups>

    <!-- Work Types -->
    <moqui.basic.Enumeration description="需求分析" enumId="WktpRequirements" enumTypeId="WorkType"/>
    <moqui.basic.Enumeration description="编程开发" enumId="WktpProgramming" enumTypeId="WorkType"/>
    <moqui.basic.Enumeration description="测试" enumId="WktpTesting" enumTypeId="WorkType"/>

    <!-- Employment Position Classes -->
    <mantle.humanres.position.EmplPositionClass title="业务分析师" emplPositionClassId="NetdiskAnalyst"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="NetdiskAnalyst" workTypeEnumId="WktpRequirements"/>

    <mantle.humanres.position.EmplPositionClass title="开发者" emplPositionClassId="NetdiskProgrammer"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="NetdiskProgrammer" workTypeEnumId="WktpProgramming"/>

    <mantle.humanres.position.EmplPositionClass title="测试者" emplPositionClassId="NetdiskTester"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="NetdiskTester" workTypeEnumId="WktpTesting"/>

    <mantle.humanres.position.EmplPositionClass title="项目管理员" emplPositionClassId="NetdiskAdmin"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="NetdiskAdmin" workTypeEnumId="WktpRequirements"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="NetdiskAdmin" workTypeEnumId="WktpProgramming"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="NetdiskAdmin" workTypeEnumId="WktpTesting"/>
</entity-facade-xml>