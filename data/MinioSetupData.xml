<entity-facade-xml type="seed-initial">
    <!-- Minio Project Management App -->
    <moqui.security.ArtifactGroup artifactGroupId="MINIO" description="Minio Project Management App"/>
    <moqui.security.ArtifactGroupMember artifactGroupId="MINIO" artifactName="component://moqui-minio/screen/MinioProjectManagement.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>
    <moqui.security.ArtifactGroupMember artifactGroupId="MINIO" artifactName="component://moqui-minio/screen/MinioApp.xml" artifactTypeEnumId="AT_XML_SCREEN" inheritAuthz="Y"/>

    <!-- Permissions for ADMIN users -->
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_ADMIN_ALL" userGroupId="ADMIN" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>

    <!-- User Groups for Minio -->
    <moqui.security.UserGroup userGroupId="MINIO_ADMIN" description="Minio 项目管理员权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_ADMIN_AUTHZ" userGroupId="MINIO_ADMIN" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>

    <moqui.security.UserGroup userGroupId="MINIO_DEVELOPER" description="Minio 开发者权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_DEVELOPER_AUTHZ" userGroupId="MINIO_DEVELOPER" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_CREATE"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_DEVELOPER_AUTHZ_UPDATE" userGroupId="MINIO_DEVELOPER" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_UPDATE"/>

    <moqui.security.UserGroup userGroupId="MINIO_TESTER" description="Minio 测试者权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_TESTER_AUTHZ" userGroupId="MINIO_TESTER" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_VIEW"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_TESTER_AUTHZ_ALL" userGroupId="MINIO_TESTER" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>

    <moqui.security.UserGroup userGroupId="MINIO_VIEW" description="Minio 项目查看权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_VIEW_AUTHZ" userGroupId="MINIO_VIEW" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_VIEW"/>

    <moqui.security.UserGroup userGroupId="MINIO_ANALYST" description="Minio 业务分析师权限"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_ANALYST_AUTHZ" userGroupId="MINIO_ANALYST" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_CREATE"/>
    <moqui.security.ArtifactAuthz artifactAuthzId="MINIO_ANALYST_AUTHZ_UPDATE" userGroupId="MINIO_ANALYST" artifactGroupId="MINIO" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_UPDATE"/>

    <!-- Access to My Account App for all Minio Groups -->
    <artifactGroups artifactGroupId="MY_ACCOUNT">
        <authz artifactAuthzId="MY_ACCOUNT_NDADMIN" userGroupId="MINIO_ADMIN" authzTypeEnumId="AUTHZT_ALWAYS" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDDEVELOPER" userGroupId="MINIO_DEVELOPER" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDTESTER" userGroupId="MINIO_TESTER" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDVIEW" userGroupId="MINIO_VIEW" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
        <authz artifactAuthzId="MY_ACCOUNT_NDANALST" userGroupId="MINIO_ANALYST" authzTypeEnumId="AUTHZT_ALLOW" authzActionEnumId="AUTHZA_ALL"/>
    </artifactGroups>

    <!-- Work Types -->
    <moqui.basic.Enumeration description="需求分析" enumId="WktpRequirements" enumTypeId="WorkType"/>
    <moqui.basic.Enumeration description="编程开发" enumId="WktpProgramming" enumTypeId="WorkType"/>
    <moqui.basic.Enumeration description="测试" enumId="WktpTesting" enumTypeId="WorkType"/>

    <!-- Employment Position Classes -->
    <mantle.humanres.position.EmplPositionClass title="业务分析师" emplPositionClassId="MinioAnalyst"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="MinioAnalyst" workTypeEnumId="WktpRequirements"/>

    <mantle.humanres.position.EmplPositionClass title="开发者" emplPositionClassId="MinioProgrammer"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="MinioProgrammer" workTypeEnumId="WktpProgramming"/>

    <mantle.humanres.position.EmplPositionClass title="测试者" emplPositionClassId="MinioTester"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="MinioTester" workTypeEnumId="WktpTesting"/>

    <mantle.humanres.position.EmplPositionClass title="项目管理员" emplPositionClassId="MinioAdmin"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="MinioAdmin" workTypeEnumId="WktpRequirements"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="MinioAdmin" workTypeEnumId="WktpProgramming"/>
    <mantle.humanres.position.EmplPositionClassWorkType emplPositionClassId="MinioAdmin" workTypeEnumId="WktpTesting"/>
</entity-facade-xml>